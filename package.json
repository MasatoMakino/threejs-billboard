  "license": "MIT",
  "devDependencies": {
    "@masatomakino/gulptask-demo-page": "^0.6.0",
    "@types/node": "^18.11.11",
    "@types/offscreencanvas": "^2019.7.0",
    "@types/three": "^0.146.0",
    "browser-sync": "^2.27.12",
    "date-fns": "^2.29.3",
    "husky": "^8.0.2",
    "pixi.js-legacy": "^7.0.4",
    "prettier": "^2.8.0",
    "pretty-quick": "^3.1.3",
    "three": "^0.147.0",
    "typedoc": "^0.23.21",
    "typescript": "^4.9.3"
  },
  "peerDependencies": {
    "pixi.js-legacy": "^7.0.4",
    "three": ">=0.126.0 <1.0.0"
  },
  "scripts": {
    "prepare": "husky install",
    "start:dev": "npm run server & npm run watch:tsc & npm run watch:demo",
    "build": "npm run buildTS && npm run demo",
    "demo": "npx @masatomakino/gulptask-demo-page --body '<canvas id=\"webgl-canvas\" width=\"640\" height=\"480\"></canvas>'",
    "watch:demo": "npm run demo -- -W",
    "buildTS": "tsc --project tsconfig.json & tsc --project tsconfig.esm.json",
    "watch:tsc": "tsc -W --incremental --project tsconfig.cjs.json & tsc -W --incremental --project tsconfig.esm.json",
    "typedocs": "npx typedoc --out ./docs/api src/index.ts",
    "server": "browser-sync ./docs/demo -w"
  },
  "description": "billboard module for three.js",
  "bugs": {
    "url": "https://github.com/MasatoMakino/threejs-billboard/issues"
  },
  "homepage": "https://github.com/MasatoMakino/threejs-billboard#readme",
  "directories": {
    "doc": "docs",
    "lib": "lib"
  }
}
